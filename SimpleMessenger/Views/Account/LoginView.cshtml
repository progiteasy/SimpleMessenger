@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow rounded">
                <div class="card-header bg-dark text-center text-white">
                    <h3>Login to the system</h3>
                </div>
                <div class="card-body justify-content-center">
                    @using (Html.BeginForm("login", "account", FormMethod.Post, new { id = "login-form" }))
                    {
                        <div id="form-validation-errors-area">
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" id="form-validation-errors-area">
                                    @ViewData.ModelState.Values.SelectMany(value => value.Errors).First().ErrorMessage
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                        </div>
                        @Html.TextBoxFor(loginModel => loginModel.Email, new { @class = "form-control input-lg mb-2", placeholder = "Enter your e-mail address" })
                        @Html.PasswordFor(loginModel => loginModel.Password, new { @class = "form-control input-lg mb-3", placeholder = "Enter your password" })
                        <div class="text-center">
                            <input class="btn btn-lg btn-dark text-white" id="login-button" type="submit" value="Log in">
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
