<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] :: SimpleMessenger</title>
    <link rel="icon" href="~/icons/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
    <link href="~/styles/main.css" rel="stylesheet"/>
</head>
<body class="custom-body">
    <header class="custom-header shadow-sm">
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="account" asp-action="login">
                    <img src="~/images/app-logo.png" width="50" height="50" title="SimpleMessenger" alt="App logo">
                </a>
                <ul class="navbar-nav">
                    @if (Convert.ToString(ViewData["Title"]) == "Login")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="account" asp-action="register">Register</a>
                        </li>
                    }
                    else if (Convert.ToString(ViewData["Title"]) == "Messenger")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown">You are logged in as @User.Identity.Name</a>
                            <ul class="dropdown-menu text-center shadow-none">
                                <li><input class="dropdown-item" id="message-create-button" type="submit" value="Send a message"></li>
                                @using (Html.BeginForm("logout", "account", FormMethod.Post))
                                {
                                    <li><input class="dropdown-item" type="submit" value="Log out"></li>
                                }
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="account" asp-action="login">Log in</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="page-footer custom-footer d-flex align-items-center justify-content-center text-muted shadow-sm">
        <div class="footer-copyright text-center">
            &copy; SimpleMessenger
            <br />
            Designed by Yaroslav Ryaguzov
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/scripts/main.js"></script>
</body>
</html>
